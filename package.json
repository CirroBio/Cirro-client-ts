{
  "private": true,
  "name": "@cirrobio/ts-monorepo",
  "description": "Monorepo for Cirro's TypeScript packages",
  "repository": {
    "type": "git",
    "url": "https://github.com/CirroBio/Cirro-client-ts.git"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "examples/*"
    ]
  },
  "license": "MIT",
  "homepage": "https://cirro.bio",
  "scripts": {
    "build": "turbo run build --filter='./packages/*'",
    "test": "turbo run test --filter='./packages/*'",
    "build:clean": "turbo run build:clean --filter='./packages/*'",
    "apiCodeGen": "openapi-generator-cli generate --generator-key cirro"
  },
  "packageManager": "yarn@4.1.1",
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.25.2",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.13.1",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "jest": "^30.2.0",
    "rollup": "^4.41.1",
    "ts-jest": "^29.4.6",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  },
  "resolutions": {
    "glob@^10.2.2": "^10.5.0",
    "glob@^11.0.0": "^11.1.0",
    "js-yaml": "4.1.1"
  }
}
